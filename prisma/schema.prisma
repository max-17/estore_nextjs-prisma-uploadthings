// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Int
  image       String
  sold        Int    @default(0)

  @@index([name])
}
